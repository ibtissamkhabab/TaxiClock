<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/course_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    tools:context=".CourseActivity">

    <!-- Bloc principal de la course -->
    <LinearLayout
        android:id="@+id/main_block"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#000000"
        android:padding="26dp"
        android:layout_centerInParent="true"
        android:layout_above="@id/bottom_menu"
        android:gravity="center"
        android:clipToOutline="true"
        android:elevation="8dp">

        <!-- Bloc TOTAL DE LA COURSE + Prix -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp"
            android:background="@drawable/bg_price"
            android:gravity="center"
            android:paddingStart="56dp"
            android:paddingEnd="56dp"
            android:layout_marginBottom="34dp">

            <TextView
                android:id="@+id/tv_price_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TOTAL DE LA COURSE"
                android:textColor="#C5AA0E"
                android:textSize="26sp"
                android:gravity="center"
                android:textStyle="bold"
                android:fontFamily="@font/digital_7"
                android:layout_marginBottom="12dp" />

            <!-- Prix avec MAD -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.50"
                    android:fontFamily="@font/digital_7"
                    android:textColor="#500101"
                    android:textSize="66sp"
                    android:textStyle="bold"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_currency"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MAD"
                    android:textColor="#C5AA0E"
                    android:textSize="24sp"
                    android:fontFamily="@font/digital_7"
                    android:gravity="center" />
            </LinearLayout>
        </LinearLayout>

        <!-- Bloc TEMPS + DISTANCE -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="10dp">

            <!-- Temps -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="26dp"
                android:layout_margin="4dp"
                android:background="@drawable/bg_price">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TEMPS"
                    android:textColor="#C5AA0E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/digital_7"
                    android:layout_marginBottom="15dp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/clockw"
                    android:contentDescription="Temps" />

                <TextView
                    android:id="@+id/tv_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00:00"
                    android:textColor="#D02727"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/digital_7"
                    android:layout_marginTop="4dp" />
            </LinearLayout>

            <!-- Distance -->
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:padding="26dp"
                android:layout_margin="14dp"
                android:background="@drawable/bg_price">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="DISTANCE"
                    android:textColor="#C5AA0E"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:fontFamily="@font/digital_7"
                    android:layout_marginBottom="15dp" />

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/position"
                    android:contentDescription="Distance" />

                <TextView
                    android:id="@+id/tv_distance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.00 Km"
                    android:textColor="#D02727"
                    android:textSize="19sp"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:fontFamily="@font/digital_7"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- Boutons DÃ‰MARRER / PAUSE -->
        <LinearLayout
            android:id="@+id/button_block"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_centerInParent="true"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="2dp">

            <Button
                android:id="@+id/btn_start_course"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="DEMARRER"
                android:textColor="#1BEB09"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="#661B8E2D"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btn_pause_course"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="56dp"
                android:text="PAUSE"
                android:textColor="#109EE9"
                android:textSize="12sp"
                android:textStyle="bold"
                android:backgroundTint="#665353A4"
                android:gravity="center"
                android:textAllCaps="false"
                android:layout_marginStart="8dp" />
        </LinearLayout>
    </LinearLayout>

    <!-- Conteneur pour fragment profil chauffeur -->
    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_above="@id/bottom_menu"
        android:visibility="gone"
        android:background="#111111"/>

    <!-- Menu du bas -->
    <LinearLayout
        android:id="@+id/bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="#000000"
        android:gravity="center"
        android:orientation="horizontal"
        android:paddingHorizontal="20dp"
        android:paddingVertical="8dp">

        <ImageButton
            android:id="@+id/btn_profile"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:src="@drawable/person"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Profil" />

        <ImageButton
            android:id="@+id/btn_position"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@android:color/transparent"
            android:src="@drawable/p"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Position"
            android:layout_marginHorizontal="40dp" />

        <ImageButton
            android:id="@+id/btn_home"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@android:color/transparent"
            android:src="@drawable/homee"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:contentDescription="Accueil"/>

    </LinearLayout>

</RelativeLayout>
