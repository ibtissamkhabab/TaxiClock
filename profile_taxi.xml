<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0A0A0A"
    android:gravity="center"
    android:padding="24dp">

    <!-- Carte Profil -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_yellow"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center"
        android:elevation="6dp">

        <!-- Image du chauffeur -->
        <ImageView
            android:id="@+id/iv_photo"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:layout_marginBottom="16dp"
            android:background="@drawable/circle_background"
            android:padding="10dp"
            android:scaleType="centerInside" />

        <!-- Titre -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profil du Chauffeur"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#C5AA0E"
            android:layout_marginBottom="20dp" />

        <!-- Informations chauffeur -->
        <TextView
            android:id="@+id/tv_nom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom : Ali"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_prenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom : Ahmed"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Âge : 35 ans"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_permis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Type de permis : B"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:layout_marginBottom="16dp" />

        <!-- QR Code dynamique -->
        <ImageView
            android:id="@+id/iv_qr_code"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginTop="8dp"
            android:src="@drawable/qr_code"
            android:scaleType="fitCenter"
            android:contentDescription="Code QR du chauffeur" />

    </LinearLayout>

</LinearLayout>
